<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3EA6A6A6"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/one"
                android:backgroundTint="#3EA6A6A6"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#3EA6A6A6"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/back_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_baseline_arrow_back_ios_24"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/grey"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:layout_marginTop="250dp"
                        android:background="@drawable/background_grey"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/callhouseBtn"
                            android:layout_width="92dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="예약하기"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/maphouseBtn"
                            android:layout_width="92dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/callhouseBtn"
                            android:background="@drawable/button_background_color"
                            android:text="지도보기"
                            android:textColor="#FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/callhouseBtn" />

                        <LinearLayout
                            android:id="@+id/scraphouseBtn"
                            android:layout_width="92dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="60dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_background"
                            android:orientation="vertical"
                            android:padding="3dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/maphouseBtn">

                            <ImageView
                                android:id="@+id/scrapHeart"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img_emptyheart" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="스크랩"
                                android:textColor="@color/black" />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/img_image"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sharehousedetail" />

                    <LinearLayout
                        android:id="@+id/hospital_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/background_hospital"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:text="[ 쉐어하우스 하늘 ]"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/tv_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="쉐어하우스,하숙"
                            android:textColor="#86000000"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="40dp"
                            android:paddingBottom="40dp"
                            android:text="서울 노원구 석계로15길 25"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/two"
                android:layout_below="@+id/one"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/callsharehouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/two"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/call"
                        android:gravity="left|center"
                        android:text=" 0507-1362-5608"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_below="@id/callsharehouse"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/address"
                    android:layout_below="@id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_ping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/address1"
                        android:gravity="left|center"
                        android:text="서울 노원구 월계동 926"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_below="@id/address"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/loaction"
                    android:layout_below="@id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/location"/>

                    <LinearLayout
                        android:id="@+id/text_loaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_way"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="left|center"
                            android:text="광운대역(1호선) 2번출구 도보1분,"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_below="@id/loaction"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/cost"
                    android:layout_below="@id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:src="@drawable/cost"/>

                    <LinearLayout
                        android:id="@+id/text_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1인실 A 420,000원"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line10"
                    android:layout_below="@id/loaction"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/parking"
                    android:layout_below="@id/line10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/parking"
                        android:gravity="left|center"
                        android:text=" 주차, 무선 인터넷"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_below="@id/parking"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <View
                    android:id="@+id/line5"
                    android:layout_below="@id/time"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/tag"
                    android:layout_below="@id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:src="@drawable/tag1"/>

                    <LinearLayout
                        android:id="@+id/test_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_hashtag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="#광운대쉐어하우스 #광운대역쉐어하우스"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line6"
                    android:layout_below="@id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E000000"/>

                <LinearLayout
                    android:id="@+id/treatment"
                    android:layout_below="@id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:src="@drawable/treatment"/>

                    <LinearLayout
                        android:id="@+id/text_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="쾌적하고 깨끗한 쉐어하우스, 안전을 최우선으로 생각합니다."
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
